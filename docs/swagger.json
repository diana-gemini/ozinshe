                    "example": "01.01.2000"
                },
                "mobilePhone": {
                    "type": "string",
                    "example": "+7(705)1112233"
                },
                "username": {
                    "type": "string",
                    "minLength": 2,
                    "example": "Tilda"
                }
            }
        }
